<NodeView>:
  height: '140px'
  width: '200px'
  size_hint: None, None

  BoxLayout:
    orientation: 'horizontal'
    size_hint: 1, 1
    canvas.before:
      Color:
        rgba: 0, 0, 0.6, 0.8
      Rectangle:
        size: self.size
        pos: self.pos

    NodeConnectionHandles:
      id: sink_handles
      connection_type: 'sink'

    BoxLayout:
      id: child_container
      orientation: 'vertical'
      size_hint: 1, 1

      canvas.before:
        Color:
          rgba: 0.3, 0, 0, 0.3
        Rectangle:
          size: self.size
          pos: self.pos

      EditLabel:
        id: name_label
        text: root.name_ro
        font_size: 12
        height: 20
        size_hint: 1, None
        on_release: root.start_edit_name()

      TextInput:
        id: name_input
        text: root.name_ro
        multiline: False
        font_size: 12
        padding: 4, 1
        height: 20
        size_hint: 1, None
        on_text: if root.validate_name(self.text): setattr(root.transform_view, 'name', self.text)

    NodeConnectionHandles:
      id: source_handles
      connection_type: 'source'



<NodeConnectionHandles>:
  width: '22px'
  padding: '0px'
  size_hint: None, 1
  orientation: 'vertical'

<NodeConnectionHandle>:
  width: '22px'
  height: '22px'
  size_hint: None, None
  margin: 0
  #on_press: root.start_connect_nodes(self)
  #on_touch_up: root.end_connect_nodes()
  text: '>'




