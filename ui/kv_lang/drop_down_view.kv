<DropDownView>:
  dd_title: 'Select'
  dd_placeholder: '-- nothing here --'
  dd_replace_title: True
  placeholder_label: placeholder_label.__self__
  spacing: '2px'
  height: 20

  Button:
    id: toggle_button
    text: root.dd_title
    on_release: dropdown.open(root)
    on_parent: dropdown.dismiss()
    height: 20
    position_hint: { 'center': 1 }
    font_size: 12
    size_hint: None, 1
    size: root.size[0], self.texture_size[1]
  DropDown:
    id: dropdown
    size_hint: None, None
    canvas.before:
      Color:
        rgba: 0.6, 0.6, 0.6, 0.8
      Rectangle:
        size: self.size
        pos: self.pos
    Label:
      id: placeholder_label
      text: root.dd_placeholder
      size_hint: None, None
      font_size: 12
      color: 0, 0, 0, 1
      halign: 'center'
      size: dropdown.size[0], self.texture_size[1]
